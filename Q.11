#include <stdio.h>
int main()
{
	int seconds,days,hours,minutes,remaining_seconds;
	printf("Enter time(in seconds)\n");
	scanf("%d",&seconds);
	days = seconds/(24*3600);
	remaining_seconds = seconds%(24*3600);
	hours = seconds/3600;
	remaining_seconds = seconds%(3600);
	minutes = seconds/60;
	remaining_seconds = seconds%(60);
	printf("%ddays,%dhours,%dminutes and %dseconds \n", days, hours, minutes, remaining_seconds);
	return 0;
}
